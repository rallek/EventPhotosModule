{# purpose of this template: inclusion template for display of related albums or hook assignments #}
{#
    You can use the context variable to check for the context of this list:
        - 'display': list of related albums included in a display template
        - 'hookDisplayView': list of albums assigned using an UI hook (display/view template)
        - 'hookDisplayEdit': list of albums assigned using an UI hook (edit template)
        - 'hookDisplayDelete': list of albums assigned using an UI hook (delete template)
#}
{% set hasAdminPermission = hasPermission('RKEventPhotosModule:Album:', '::', 'ACCESS_EDIT') %}
{% set hasEditPermission = hasPermission('RKEventPhotosModule:Album:', '::', 'ACCESS_EDIT') %}
{% if context != 'display' %}
    <h3>{{ __('Assigned albums', 'rkeventphotosmodule') }}</h3>
    {{ pageAddAsset('stylesheet', zasset('@RKEventPhotosModule:css/style.css')) }}
    {{ pageAddAsset('stylesheet', zasset('@RKEventPhotosModule:css/custom.css')) }}
    {{ pageAddAsset('stylesheet', asset('jquery-ui/themes/base/jquery-ui.min.css')) }}
    {{ pageAddAsset('stylesheet', asset('bootstrap-jqueryui/bootstrap-jqueryui.min.css')) }}
    {{ pageAddAsset('javascript', asset('jquery-ui/jquery-ui.min.js')) }}
    {{ pageAddAsset('javascript', asset('bootstrap-jqueryui/bootstrap-jqueryui.min.js')) }}
    {{ pageAddAsset('javascript', zasset('@RKEventPhotosModule:js/RKEventPhotosModule.js'), 99) }}
    {% if context == 'hookDisplayView' and hasEditPermission %}
        {% set entityNameTranslated = __('album', 'rkeventphotosmodule') %}
        {{ pageAddAsset('javascript', zasset('@RKEventPhotosModule:js/RKEventPhotosModule.HookAssignment.js'), 99) }}
        {{ pageAddAsset('javascript', zasset('@RKEventPhotosModule:js/RKEventPhotosModule.EditFunctions.js'), 99) }}
        {{ pageAddAsset('javascript', zasset('@RKEventPhotosModule:js/RKEventPhotosModule.InlineEditing.js'), 99) }}
        {{ pageAddAsset('javascript', zasset('@RKEventPhotosModule:js/RKEventPhotosModule.AutoCompletion.js'), 99) }}
    {% endif %}
{% endif %}
{% if noLink is not defined %}
    {% set noLink = false %}
{% endif %}
{% if items|default and items|length > 0 %}
<ul class="list-group rkeventphotosmodule-related-item-list album">
{% for item in items %}
    {% if hasAdminPermission or item.workflowState == 'approved' or (item.workflowState in ['defered', 'trashed'] and hasEditPermission and currentUser|default and item.createdBy.getUid() == currentUser.uid) %}
    <li class="list-group-item">
<h4 class="list-group-item-heading">
{% spaceless %}
{% if not noLink %}
    <a href="{{ path('rkeventphotosmodule_album_' ~ routeArea ~ 'display', {'id': item.getId()}) }}" title="{{ item|rkeventphotosmodule_formattedTitle|e('html_attr') }}">
{% endif %}
    {{ item|rkeventphotosmodule_formattedTitle }}
{% if not noLink %}
    </a>
    <a id="albumItem{{ item.getKey() }}Display" href="{{ path('rkeventphotosmodule_album_' ~ routeArea ~ 'display', {'id': item.getId(), raw: 1}) }}" title="{{ __('Open quick view window') }}" class="rkeventphotos-inline-window hidden" data-modal-title="{{ item|rkeventphotosmodule_formattedTitle|e('html_attr') }}"><i class="fa fa-id-card-o"></i></a>
{% endif %}
{% endspaceless %}
</h4>
{% if context == 'hookDisplayView' and hasEditPermission %}
    {% set assignmentId = '' %}
    {% for assignment in assignments if assignment.getAssignedId() == item.getKey() %}
        {% set assignmentId = assignment.getId() %}
    {% endfor %}
    <p class="list-group-item-text">
        <a href="javascript:void(0);" title="{{ __f('Detach this %name%', {'%name%': entityNameTranslated}, 'rkeventphotosmodule')|e('html_attr') }}" class="detach-rkeventphotosmodule-object hidden" data-assignment-id="{{ assignmentId|e('html_attr') }}"><i class="fa fa-chain-broken"></i> {{ __f('Detach %name%', {'%name%': entityNameTranslated}, 'rkeventphotosmodule') }}</a>
    </p>
{% endif %}
    </li>
    {% endif %}
{% endfor %}
</ul>
{% endif %}
{% if context == 'hookDisplayView' and hasEditPermission %}
    {% set idPrefix = 'hookAssignmentAlbum' %}
    {% set addLinkText = __f('Attach %name%', {'%name%': entityNameTranslated}, 'rkeventphotosmodule') %}
    <div id="{{ idPrefix }}LiveSearch" class="rkeventphotosmodule-add-hook-assignment">
        <a id="{{ idPrefix }}AddLink" href="javascript:void(0);" title="{{ addLinkText|e('html_attr') }}" class="attach-rkeventphotosmodule-object hidden" data-owner="{{ subscriberOwner|e('html_attr') }}" data-area-id="{{ subscriberAreaId|e('html_attr') }}" data-object-id="{{ subscriberObjectId|e('html_attr') }}" data-url="{{ subscriberUrl|e('html_attr') }}" data-assigned-entity="album"><i class="fa fa-link"></i> {{ addLinkText }}</a>
        <div id="{{ idPrefix }}AddFields" class="rkeventphotosmodule-autocomplete">
            <label for="{{ idPrefix }}Selector">{{ __f('Find %name%', {'%name%': entityNameTranslated}, 'rkeventphotosmodule') }}</label>
            <br />
            <i class="fa fa-search" title="{{ __f('Search %name%', {'%name%': entityNameTranslated}, 'rkeventphotosmodule')|e('html_attr') }}"></i>
            <input type="hidden" name="{{ idPrefix }}" id="{{ idPrefix }}" value="{% for assignment in assignments %}{% if not loop.first %},{% endif %}{{ assignment.getAssignedId() }}{% endfor %}" />
            <input type="hidden" name="{{ idPrefix }}Multiple" id="{{ idPrefix }}Multiple" value="0" />
            <input type="text" id="{{ idPrefix }}Selector" name="{{ idPrefix }}Selector" autocomplete="off" />
            <input type="button" id="{{ idPrefix }}SelectorDoCancel" name="{{ idPrefix }}SelectorDoCancel" value="{{ __('Cancel', 'rkeventphotosmodule') }}" class="btn btn-default rkeventphotosmodule-inline-button" />
            <a id="{{ idPrefix }}SelectorDoNew" href="{{ path('rkeventphotosmodule_album_' ~ routeArea ~ 'edit') }}" title="{{ __f('Create new %name%', {'%name%': entityNameTranslated}, 'rkeventphotosmodule') }}" class="btn btn-default rkeventphotosmodule-inline-button"><i class="fa fa-plus"></i> {{ __('Create', 'rkeventphotosmodule') }}</a>
            <noscript><p>{{ __('This function requires JavaScript activated!') }}</p></noscript>
        </div>
    </div>
    {% set assignmentInitScript %}
        <script>
        /* <![CDATA[ */
            var rKEventPhotosInlineEditHandlers = [];
            var rKEventPhotosEditHandler = {
                alias: '{{ idPrefix }}',
                prefix: '{{ idPrefix }}SelectorDoNew',
                moduleName: 'RKEventPhotosModule',
                objectType: 'album',
                inputType: 'autocomplete',
                windowInstanceId: null
            };
            rKEventPhotosInlineEditHandlers.push(rKEventPhotosEditHandler);

            rKEventPhotosInitRelationHandling('album', '{{ idPrefix }}', '{{ idPrefix }}SelectorDoNew', true, 'autocomplete', '{{ path('rkeventphotosmodule_album_' ~ routeArea ~ 'edit') }}');
        /* ]]> */
        </script>
    {% endset %}
    {{ pageAddAsset('footer', assignmentInitScript) }}
{% endif %}
